---
import Sidebar from '../components/Sidebar.astro';

interface Props {
  title?: string;
}

const { title = 'Sodra' } = Astro.props;
---

<!DOCTYPE html>
<html lang="sv">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
</head>
<body>
  <div class="app-container">
    <Sidebar />
    
    <main class="main-content">
      <slot />
    </main>
  </div>
</body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: Arial, Helvetica, sans-serif
	;
    background-color: #FEF7F5;
    color: #1a1a1a;
  }

  .app-container {
  display: flex;
  min-height: 100vh;
}

.main-content {
  flex: 1;
  margin-left: 240px; /* Samma bredd som sidebaren */
  margin-top: 20px;
  margin-right: 20px;
  margin-bottom: 20px;
  padding: 32px 42px;
  overflow-y: auto;
  background-color: white;
  border-radius: 16px;
  border: 1px solid #e5e5e5;
}

  h1 {
    font-size: 28px;
    font-weight: 600;
    margin-bottom: 8px;
  }

  h2 {
    font-size: 20px;
    font-weight: 600;
    margin-bottom: 16px;
  }

  p {
    color: #666;
    line-height: 1.5;
  }
</style>
