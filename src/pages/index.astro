---
import Layout from '../layouts/Layout.astro';
import FreeLockers from '../components/FreeLockers.astro';
import NotificationsCard from '../components/NotificationsCard.astro';
import TodaysActionsCard from '../components/TodaysActionsCard.astro';
import ClothingLocker from '../components/ClothingLocker.astro';
---

<Layout title="Overview - Sodra">
  <div class="welcome-section">
	<div class="first-title">
            <img src="/Sun.svg" alt="">
    <h1>Welcome, Kajsa!</h1>
	</div>
    <p class="subtitle">Manage your lockers, send notifications and keep receivers updated.</p>
  </div>

  <div class="dashboard-grid">
    <FreeLockers free={16} total={26} change={2} />
    <NotificationsCard />
    <TodaysActionsCard 
      date="20 November, 2025"
      actions={[
        { text: "Send notification to Robto", img: "/Noteavatar.png", link: "#" },
        { text: "Fill locker with new delivery", img: "/Noteavatar.png", link: "#" }
		
      ]}
    />
  </div>

  <!-- My lockers section -->
  <div class="lockers-section">
    <h2 class="section-title">
      My lockers
      <span class="badge">1</span>
    </h2>

<a href="/clothing" class="locker-link">
  <ClothingLocker />
</a>
</Layout>

<style>
.first-title
{display: flex;
gap: 8px;}

  .welcome-section {
    margin-bottom: 32px;
  }

  h1 {
    font-size: 28px;
    font-weight: 500;
    margin-bottom: 4px;
    color: #1a1a1a;
  }

  .subtitle {
    font-size: 16px;
    color: #666;
  }

  .dashboard-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
    margin-bottom: 48px;
  }

  /* My lockers section */
  .lockers-section {
    margin-top: 48px;
  }

  .section-title {
    font-size: 20px;
    font-weight: 500;
    margin-bottom: 24px;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .badge {
    background: #f0f0f0;
    color: #666;
    font-size: 14px;
    font-weight: 500;
    padding: 2px 8px;
    border-radius: 12px;
  }


  .locker-link {
    text-decoration: none;
    color: inherit;
  }

  @media (max-width: 1200px) {
    .dashboard-grid {
      grid-template-columns: 1fr;
    }
  }
</style>