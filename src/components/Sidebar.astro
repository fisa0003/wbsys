---
// Sidebar.astro
const currentPath = Astro.url.pathname;

// Helper function to check if link is active
const isActive = (path: string) => {
  if (path === '/' || path === '/overview') {
    return currentPath === '/' || currentPath === '/overview';
  }
  return currentPath.startsWith(path);
};
---

<aside class="sidebar">
  <div class="logo">
    <span class="logo-text">Sodra</span>
  </div>

  <nav class="nav">
    <div class="nav-section">
      <h3 class="nav-heading">GENERAL</h3>
      <ul class="nav-list">
        <li>
          <a href="/" class={`nav-link ${isActive('/') ? 'active' : ''}`}>
            <img src="/Home.svg" alt="" class="icon">
            <span>Overview</span>
          </a>
        </li>
        <li>
          <a href="/statistics" class={`nav-link ${isActive('/statistics') ? 'active' : ''}`}>
            <img src="/Trendingup.svg" alt="" class="icon">
            <span>Statistics</span>
          </a>
        </li>
      </ul>
    </div>

    <div class="nav-section">
      <h3 class="nav-heading">MY LOCKERS</h3>
      <ul class="nav-list">
        <li>
          <a href="/clothing" class={`nav-link ${isActive('/clothing') ? 'active' : ''}`}>
            <img src="/Package.svg" alt="" class="icon">
            <span>Clothing locker</span>
          </a>
        </li>
        <li>
          <a href="/it-locker" class={`nav-link ${isActive('/it-locker') ? 'active' : ''}`}>
            <img src="/Lock.svg" alt="" class="icon">
            <span>IT locker</span>
          </a>
        </li>
      </ul>
    </div>

    <div class="nav-section settings">
      <h3 class="nav-heading">SETTINGS</h3>
      <ul class="nav-list">
        <li>
          <a href="/users" class={`nav-link ${isActive('/users') ? 'active' : ''}`}>
            <img src="/Users.svg" alt="" class="icon">
            <span>Users</span>
          </a>
        </li>
        <li>
          <a href="/lockers" class={`nav-link ${isActive('/lockers') ? 'active' : ''}`}>
            <img src="/Lock.svg" alt="" class="icon">
            <span>Lockers</span>
          </a>
        </li>
        <li>
          <a href="/company" class={`nav-link ${isActive('/company') ? 'active' : ''}`}>
            <img src="/Shoppingbag.svg" alt="" class="icon">
            <span>Company</span>
          </a>
        </li>
        <li>
          <a href="/notifications" class={`nav-link ${isActive('/notifications') ? 'active' : ''}`}>
            <img src="/Messagecircle.svg" alt="" class="icon">
            <span>Notifications</span>
          </a>
        </li>
      </ul>
    </div>
  </nav>
</aside>

<style>
  .sidebar {
    width: 240px;
    height: 100vh;
    background-color: #fafafa;
    border-right: 1px solid #e5e5e5;
    display: flex;
    flex-direction: column;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    position: fixed;
    left: 0;
    top: 0;
    overflow-y: auto;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 20px 16px;
    font-weight: 600;
    font-size: 16px;
    color: #1a1a1a;
  }

  .nav {
    flex: 1;
    display: flex;
    flex-direction: column;
    padding: 8px 0;
  }

  .nav-section {
    margin-bottom: 24px;
  }

  .nav-section.settings {
    margin-top: auto;
  }

  .nav-heading {
    font-size: 11px;
    font-weight: 600;
    color: #666;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    padding: 0px 16px;
    margin: 0 0 4px 0;
  }

  .nav-list {
    list-style: none;
    padding: 12px;
    margin: 0;
  }

  .nav-link {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 10px 12px;
    color: #4a4a4a;
    text-decoration: none;
    font-size: 14px;
    transition: background-color 0.2s;
    border-radius: 6px;
  }

  .nav-link:hover {
    background-color: #f0f0f0;
  }

  .nav-link.active {
    background-color: #f0d7ca;
    color: #1a1a1a;
  }

  .icon {
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
</style>